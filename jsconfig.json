{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      //Assuming your components/utilities live in ./src
      //Update this path as necessary
      "@lib/*": ["./lib/*"],
      "@utils/*": ["./utils/*"],
      "@config/*": ["./config/*"],
      "@components/*": ["./components/*"],
      "@data/*": ["./data/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*",".next"]
}